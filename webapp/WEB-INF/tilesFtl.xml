<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>

    <definition name="layout" template="/WEB-INF/views/tiles/layout.ftl"
                templateType="freemarker">
        <put-attribute name="title" value="layout.title.text" type="freemarker"/>
        <put-attribute name="header" value="/WEB-INF/views/ftl/_header.ftl" type="freemarker"/>
        <put-attribute name="content" value="" type="freemarker"/>
        <put-attribute name="footer" value="/WEB-INF/views/ftl/_footer.ftl" type="freemarker"/>
    </definition>

    <definition name="index" extends="layout" templateType="freemarker">
        <put-attribute name="content" value="/WEB-INF/views/tiles/index.ftl" type="freemarker"/>
    </definition>

</tiles-definitions>